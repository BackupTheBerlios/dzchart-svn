
var s: string;

s := TIdeEditor.GetSelectedText;
if s = '' then
  exit;

var Filename: string;
Filename := InputBox('Please enter filename to save to!',
  'Save snippet to file', 'c:\snip.pas');
if Filename = '' Then
  Exit;

var st: TStringList;
st := TStringList.Create;
st.Text := s;
st.SaveToFile(Filename);

