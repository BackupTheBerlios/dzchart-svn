// This script adds leading "// " to all lines that don't already have it

var i: integer;
var s: string;
var st: TStringList;

st := TStringList.Create;
st.Text := TIdeEditor.GetSelectedText;

for i := 0 to st.Count - 1 do begin
  s := Trim(st[i]);
  if Copy(s, 1, 2) <> '//' then
    st[i] := '// ' + s;
end;

TIdeEditor.SetSelectedText(st.Text);


