// This script removes leading "//" from lines

var i: integer;
var s: string;
var st: TStringList;

st := TStringList.Create;
st.Text := TIdeEditor.GetSelectedText;

for i := 0 to st.Count - 1 do begin
  s := Trim(st[i]);
  if Copy(s, 1, 3) = '// ' then
    st[i] := Copy(s, 4, Length(s) - 3)
  else if Copy(s, 1, 2) = '//' then
    st[i] := Copy(s, 3, Length(s) - 2);
end;

TIdeEditor.SetSelectedText(st.Text);

